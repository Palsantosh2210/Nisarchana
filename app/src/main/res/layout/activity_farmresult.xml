<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".farmresult">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="26sp"
            android:text="LABOUR"
            android:textStyle="bold"
            android:layout_margin="15dp"
            android:textAlignment="center" />


        <ImageView

            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_marginBottom="100dp"
            app:srcCompat="@drawable/logonisar" />
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="383dp"
                android:layout_gravity="center"
                android:layout_marginBottom="100dp"
                android:id="@+id/imgv"
                android:src="@drawable/logonisar"/>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cropnamere"
            android:layout_marginLeft="40dp"
            android:layout_marginBottom="18dp"
            android:textStyle="bold"
            android:text="Education"
            android:textSize="24sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cropquantityre"
            android:layout_marginLeft="40dp"
            android:layout_marginBottom="18dp"
            android:textStyle="bold"
            android:text="Experience"
            android:textSize="20sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/croppricre"
            android:layout_marginLeft="40dp"
            android:layout_marginBottom="18dp"
            android:textStyle="bold"
            android:text="Age"
            android:textSize="20sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/croptotalpricere"
            android:layout_marginLeft="40dp"
            android:layout_marginBottom="18dp"
            android:textStyle="bold"
            android:text="CivilEngineer/Labour"
            android:textSize="20sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cropfarnamere"
            android:layout_marginLeft="40dp"
            android:layout_marginBottom="18dp"
            android:textStyle="bold"
            android:text="Name"
            android:textSize="20sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cropemailre"
            android:layout_marginLeft="40dp"
            android:layout_marginBottom="18dp"
            android:textStyle="bold"
            android:text="Email"
            android:textSize="20sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cropphonere"
            android:layout_marginLeft="40dp"
            android:layout_marginBottom="18dp"
            android:textStyle="bold"
            android:text="Phone"
            android:textSize="20sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cropstatere"
            android:layout_marginLeft="40dp"
            android:layout_marginBottom="18dp"
            android:textStyle="bold"
            android:text="State"
            android:textSize="20sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cropdistrictre"
            android:layout_marginLeft="40dp"
            android:layout_marginBottom="18dp"
            android:textStyle="bold"
            android:text="District"
            android:textSize="20sp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/call"
            android:text="Call"
            android:layout_gravity="center"
            android:textStyle="bold"/>



    </LinearLayout>
</ScrollView>
